<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="250.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project11.Controllers.FilterControllers.ByCourseFilterController">
   <children>

      <fx:define>
         <ToggleGroup fx:id="toggleGroup" />
      </fx:define>


      <Label layoutX="150.0" layoutY="5.0" text="Filter Options" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Slider fx:id="slider" layoutX="14.0" layoutY="112.0" majorTickUnit="2.0" max="33" min="1.0" minorTickCount="1" prefHeight="37.0" prefWidth="350.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="0" visible="true" />
      <Slider fx:id="sliderRange1" layoutX="14.0" layoutY="112.0" majorTickUnit="2.0" max="33.0" min="1.0" minorTickCount="1" prefHeight="37.0" prefWidth="350.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="0" visible="false" />
      <Slider fx:id="sliderRange2" layoutX="14.0" layoutY="172.0" majorTickUnit="2.0" max="33.0" min="1.0" minorTickCount="1" prefHeight="37.0" prefWidth="350.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="0" visible="false" />

      <RadioButton layoutX="12.0" layoutY="31.0" mnemonicParsing="false" onAction="#handleCourseToggleGroup" selected="true" text="Pick Number" toggleGroup="${toggleGroup}" />
      <RadioButton layoutX="12.0" layoutY="54.0" mnemonicParsing="false" onAction="#handleCourseToggleGroup" text="Pick Range" toggleGroup="${toggleGroup}" />
      <RadioButton layoutX="12.0" layoutY="76.0" mnemonicParsing="false" onAction="#handleCourseToggleGroup" text="Enter Multiple Numbers" toggleGroup="${toggleGroup}" />

      <TextField fx:id="textField" layoutX="15.0" layoutY="112.0" prefHeight="25.0" prefWidth="339.0" promptText="Enter courses seperated by commas (example: 1,3,4,8)" visible="false" />

      <Label fx:id="selectLabel" layoutX="150.0" layoutY="94.0" text="Select Number" />
      <Label fx:id="selectMinLabel" layoutX="150.0" layoutY="94.0" text="Select Min" visible="false" />
      <Label fx:id="selectMaxLabel" layoutX="150.0" layoutY="150.0" text="Select Max" visible="false" />
      <Label fx:id="enterNumbersLabel" layoutX="150.0" layoutY="94.0" text="Enter Numbers" visible="false" />

      <Button fx:id="addButton" layoutX="171.0" layoutY="217.0" mnemonicParsing="false" onAction="#handleAddFilter" text="Add" />




   </children>
</AnchorPane>
